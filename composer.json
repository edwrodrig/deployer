{
    "name": "edwrodrig/deployer",
    "description": "Library to deploy folders to github or remotes using rsync",
    "license": "MIT",
    "authors": [
        {
            "name": "Edwin Rodríguez León",
            "email": "edwrodrig@gmail.com"
        }
    ],
    "minimum-stability" : "stable",
    "require": {
        "php": "^7.2"
    },
    "require-dev" : {
        "phpunit/phpunit" : "^7.0"
    },
    "autoload" : {
        "psr-4" :  {
          "edwrodrig\\deployer\\" : "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "tests\\edwrodrig\\deployer\\" : "tests/"
        }
    },
    "archive" : {
        "exclude" : [
            "/files",
            "!/files/github_credentials",
            "/examples",
            "/tests",
            ".gitignore",
            ".git",
            "phpunit.xml.dist",
            "README.md"
        ]
    }
}
